<text top="1854" left="1845" width="247" height="45" font="font8" id="p1_t101" reading_order_no="99" segment_no="6" tag_type="text">digm  and  views  a</text>
<text top="1902" left="1846" width="258" height="45" font="font8" id="p1_t102" reading_order_no="100" segment_no="6" tag_type="text">voice  service  as  a</text>
